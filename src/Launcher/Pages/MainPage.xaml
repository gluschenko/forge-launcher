<Page x:Class="Launcher.Pages.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Launcher.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="400" d:DesignWidth="400"
      Title="Главная">
    

    <Grid Background="White">
        <Button Content="ИГРАТЬ" BorderThickness="0" Width="130" Height="50" FontSize="16" Style="{StaticResource RedButtonStyle}" Click="PlayButton_Click">
            <Button.Effect>
                <DropShadowEffect Direction="-70" Opacity="0.4" RenderingBias="Quality" BlurRadius="20"/>
            </Button.Effect>
        </Button>
        <Label x:Name="VersionLabel" 
               HorizontalAlignment="Center" 
               VerticalAlignment="Bottom" 
               Padding="5" 
               Foreground="Gray">Version</Label>
    </Grid>
</Page>
